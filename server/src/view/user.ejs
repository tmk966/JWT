<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List User</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <h1 class="mt-4 mb-5" style="text-align: center; color: lightseagreen">
      MEMBER WAS PROMOTED
    </h1>
    <div class="container">
      <table
        class="table table-bordered border-primary table-hover table-primary"
        style="text-align: center"
      >
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Name</th>
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% userList.forEach(function(item,index){ %>
          <tr>
            <th scope="row"><%=index+1%></th>
            <td><%=item.email%></td>
            <td><%=item.username%></td>
            <td>Master</td>

            <td>
              <button type="button" class="btn btn-primary">Follow</button>
              <form
                action="/delete/user/<%=item.id%>"
                method="POST"
                style="display: inline"
              >
                <button type="submit" class="btn btn-success">About</button>
              </form>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
